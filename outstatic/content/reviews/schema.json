{
  "title": "Reviews",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "title": "Product Title"
    },
    "date": {
      "type": "string",
      "format": "date",
      "title": "Publish Date"
    },
    "description": {
      "type": "string",
      "title": "Description"
    },
    "updatedDate": {
      "type": "string",
      "format": "date",
      "title": "Updated Date"
    },
    "asin": {
      "type": "string",
      "title": "Amazon ASIN"
    },
    "brand": {
      "type": "string",
      "title": "Brand"
    },
    "category": {
      "type": "string",
      "title": "Category"
    },
    "rating": {
      "type": "number",
      "minimum": 1,
      "maximum": 5,
      "title": "Rating"
    },
    "image": {
      "type": "string",
      "title": "Product Image URL"
    },
    "amazonUrl": {
      "type": "string",
      "title": "Amazon URL"
    },
    "pros": {
      "type": "array",
      "items": { "type": "string" },
      "title": "Pros"
    },
    "cons": {
      "type": "array",
      "items": { "type": "string" },
      "title": "Cons"
    }
  },
  "required": ["title", "date", "description"]
}
